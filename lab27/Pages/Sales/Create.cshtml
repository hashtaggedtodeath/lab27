@page
@model lab27.Pages.Sales.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create Sale</h1>
<hr />

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="SaleVM.ProductID" class="control-label"></label>
                <select asp-for="SaleVM.ProductID" class="form-control" asp-items="Model.SaleVM.Products"></select>
            </div>

            <div class="form-group">
                <label asp-for="SaleVM.SupplierID" class="control-label"></label>
                <select asp-for="SaleVM.SupplierID" class="form-control" asp-items="Model.SaleVM.Suppliers"></select>
            </div>

            <div class="form-group">
                <label asp-for="SaleVM.CustomerID" class="control-label"></label>
                <select asp-for="SaleVM.CustomerID" class="form-control" asp-items="Model.SaleVM.Customers"></select>
            </div>

            <div class="form-group">
                <label asp-for="SaleVM.QuantitySold" class="control-label"></label>
                <input asp-for="SaleVM.QuantitySold" class="form-control" />
                <span asp-validation-for="SaleVM.QuantitySold" class="text-danger"></span>
            </div>

            <input type="hidden" asp-for="SaleVM.TotalAmount" />

            <div class="form-group mt-3">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
